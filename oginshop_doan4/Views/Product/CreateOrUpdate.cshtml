@model Product
@{
    var cate = ViewBag.CategoryId as SelectList;
}


<div class="modal fade bd-example-nodal-lg" id="create-or-update" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Product 132</h5>
                <button type="button" class="close button-close" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div>
                    <div class="form-group row">
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputName" class="col-sm-2 col-form-label">Name</label>
                            <input type="text" class="form-control" id="inputName" placeholder="Name" value="@Model.Name" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="title" class="col-sm-2 col-form-label">Description</label>
                            <input type="text" class="form-control" id="description" placeholder="Description" value="@Model.Description" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="descrip" class="col-sm-2 col-form-label">Inmage</label>
                            <input type="text" class="form-control" id="inmage" placeholder="Inmage" value="@Model.Inmage" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputprice" class="col-sm-2 col-form-label">Price</label>
                            <input type="text" class="form-control" id="price" placeholder="Price" value="@Model.Price" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputpricesale" class="col-sm-2 col-form-label">Rating</label>
                            <input type="text" class="form-control" id="rating" placeholder="Rating" value="@Model.Rating" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="inputquantity" class="col-sm-2 col-form-label">Quantity</label>
                            <input type="text" class="form-control" id="quantity" placeholder="Quantity" value="@Model.Quantity" />
                        </div>
                        <div class="form-group col-md-6 mb-3">
                            <label for="CategoryId" class="col-sm-2 col-form-label">Category</label>
                            <select asp-for="CategoryId" class="form-control" asp-items="cate"></select>
                        </div>

                    </div>
                    <div class="form-group row mb-3">
                        <label for="avata" class="col-sm-2 col-form-label">Inmage</label>
                        <div class="form-group">
                            <input type="text" class="form-control" id="inmage" value="@Model.Inmage" style="display:none" />

                            <input type="file" class="form-control btn-upload-single-image" />
                            <div>
                                <img src="@Model.Inmage" style="width:100px;height:100px" id="show-upload-single-image" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary button-close">Close</button>
                <button type="button" class="btn btn-primary" id="btn-save-san-pham" sp-id="@Model.id">Save changes</button>
            </div>
        </div>

    </div>
</div>
